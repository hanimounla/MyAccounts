<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/allAccoounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="All my accounts" />
    <Button
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:id="@+id/aboutBTN"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="10sp"
        android:background="@android:drawable/ic_dialog_info"
        android:gravity="center_vertical"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccountsList"
        android:scrollbarSize="5sp"
        android:divider="@color/colorPrimary"
        android:layout_below="@id/allAccoounts"
         />

    <com.rey.material.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NewAccFBTN"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/add_neww"
        />


</RelativeLayout>